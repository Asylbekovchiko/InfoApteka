
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InfoApteka" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlHighlight">@color/light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="bottomNavigationStyle">@style/BottomNav</item>
    </style> <!-- Bottom navigation -->

    <!-- Base application theme. -->
    <style name="Theme.InfoApteka.FullScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="bottomNavigationStyle">@style/BottomNav</item>
    </style> <!-- Bottom navigation -->

    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/shape_ffffff_topradius_8dp</item>
    </style>

    <!-- Alert Dialog -->
    <style name="AlertDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/shape_ffffff_rad_16dp</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="BottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:state_expanded">true</item>
        <item name="cornerRadius">16dp</item>
        <item name="bottomSheetStyle">@style/BottomSheetBackground</item>
    </style>

    <style name="BottomSheetBackground" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_ffffff_toprad_16dp</item>
    </style>

    <style name="RadioButtonStyle"
        parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/selector_radiobutton</item>
    </style>

    <style name="RadioButtonStyle.PaymentMethod">
        <item name="android:textSize">@dimen/scale_1.75x</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    // DatePicker
    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/green</item>
        <!-- header background -->
        <item name="android:windowBackground">@color/white</item>
        <!-- calendar background -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- days of the month -->
        <item name="android:textColorSecondary">@color/blue</item>
        <!-- days of the week -->
        <item name="android:colorControlActivated">@color/secondary_red</item>
    </style>
    <style name="DatePickerButton">
        <item name="android:textColor">@color/blue</item>
    </style>
</resources>