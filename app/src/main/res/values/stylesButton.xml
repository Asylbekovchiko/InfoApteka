<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/dp_2x</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle.Green" parent="ButtonStyle">
        <item name="backgroundTint">@color/green</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="ButtonStyle.Orange">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="ButtonStyle.SecondaryGray">
        <item name="backgroundTint">@color/secondary_gray</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="ButtonStyle.Red">
        <item name="backgroundTint">@color/secondary_red</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="ButtonStyle.Stroke" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/dp_2x</item>
        <item name="strokeColor">@color/light</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ButtonStyle.StrokeLight" parent="ButtonStyle.Stroke">
        <item name="strokeColor">@color/light</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="ButtonStyle.StrokeLight.Sort" parent="ButtonStyle.Stroke">
        <item name="strokeColor">@color/light</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="cornerRadius">@dimen/dp_1x</item>
    </style>

    <style name="ButtonStyle.StrokeSecondaryGray" parent="ButtonStyle.Stroke">
        <item name="strokeColor">@color/secondary_gray</item>
        <item name="android:textColor">@color/secondary_gray</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="ButtonStyle.Small.Blue" parent="ButtonStyle">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:enabled">true</item>
        <item name="cornerRadius">@dimen/dp_1.5x</item>
        <item name="android:layout_height">38dp</item>
    </style>

    <style name="ButtonStyle.Small.Simple" parent="ButtonStyle">
        <item name="backgroundTint">@color/light_2</item>
        <item name="android:enabled">true</item>
        <item name="cornerRadius">@dimen/dp_1.5x</item>
        <item name="android:layout_height">38dp</item>
    </style>

    <style name="ButtonStyle.Simple.Button" parent="ButtonStyle">
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/dp_1x</item>
        <item name="strokeColor">@color/light</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>K
        <item name="rippleColor">@color/light</item>
    </style>

    <dimen name="btn_height">44dp</dimen>

</resources>